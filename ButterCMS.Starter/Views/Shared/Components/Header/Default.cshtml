@model IEnumerable<NavigationItemViewModel>

@{
    var defaultActiveItemUrl = "home";
}

<header class="header">
    <div class="navbar-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="/">
                            <img src="/assets/images/Logo_s_tekstom2.png" alt="Logo" />
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <div class="ms-auto">
                                <ul id="nav" class="navbar-nav ms-auto">
                                    @foreach (var item in Model)
                                    {
                                        var itemClasses = item.Url == defaultActiveItemUrl ? "page-scroll active" : "page-scroll";

                                        <li class="nav-item">
                                            <a asp-controller="home" asp-action="index" asp-fragment="@item.Url" class="@itemClasses">@item.Label</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>